<section class="text-gray-600 body-font bg-gray-100">
  <div class="container px-5 py-24 mx-auto">
    <div class="flex flex-col text-center w-full mb-20">
      <h1 class="sm:text-3xl text-2xl font-medium title-font mb-4 text-gray-900">Posts</h1>
      <p class="lg:w-2/3 mx-auto leading-relaxed text-base"></p>
    </div>

    <% for (post of posts){%>
      <div class="container px-5 py-5 mx-auto">
        <div class="flex flex-wrap -m-4">
          <div class="p-4 md:w-1/3">
            <div class="h-full border-2 rounded-lg overflow-hidden">
              <img class="lg:h-48 md:h-36 w-full object-contain object-center" style="background-color: <%=post.bg%>;" src="<%=post.image%>">
              <div class="p-6">
                <p class="leading-relaxed mb-3"><%=post.caption%></p>
                <div class="flex items-center flex-wrap ">
                  <a class="text-indigo-400 inline-flex items-center md:mb-2 lg:mb-0">Learn More
                    <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M5 12h14"></path>
                      <path d="M12 5l7 7-7 7"></path>
                    </svg>
                  </a>
                  <span class="text-gray-500 mr-3 inline-flex items-center lg:ml-auto md:ml-0 ml-auto leading-none text-sm pr-3 py-1 border-r-2 border-gray-800">
                    <svg xmlns="http://www.w3.org/2000/svg" stroke="currentColor" width= "15" height="15" viewBox="0 0 24 24"><path d="M12 9.229c.234-1.12 1.547-6.229 5.382-6.229 2.22 0 4.618 1.551 4.618 5.003 0 3.907-3.627 8.47-10 12.629-6.373-4.159-10-8.722-10-12.629 0-3.484 2.369-5.005 4.577-5.005 3.923 0 5.145 5.126 5.423 6.231zm-12-1.226c0 4.068 3.06 9.481 12 14.997 8.94-5.516 12-10.929 12-14.997 0-7.962-9.648-9.028-12-3.737-2.338-5.262-12-4.27-12 3.737z"/></svg>&nbsp;
                    <%for (like of likes){%>
                      <% if (like.postId == post._id){%>
                        <%=like.likes%>
                        <%}%>
                      <%}%>
                  </span>
                  <span class="text-gray-500 inline-flex items-center leading-none text-sm">
                    <svg class="w-4 h-4 mr-1" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
                      <path d="M21 11.5a8.38 8.38 0 01-.9 3.8 8.5 8.5 0 01-7.6 4.7 8.38 8.38 0 01-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 01-.9-3.8 8.5 8.5 0 014.7-7.6 8.38 8.38 0 013.8-.9h.5a8.48 8.48 0 018 8v.5z"></path>
                    </svg>0
                  </span>
                </div>
              </div>
            </div>
          </div>
      <%}%>
      </div>

      </section>
