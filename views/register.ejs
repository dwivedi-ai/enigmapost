  <style>
    main{
      background-color: rgba(0,0,0, 0.5);
      padding: 20px;
      border-radius: 10px;
    }
  </style>
  <main class="px-3">
    <h1></h1>
    <p class="lead">Fill the following credentials.</p>
        <form class="forums" action="/register" method="post">

      <div class="input-group flex-nowrap">
        <span class="input-group-text" id="addon-wrapping">@</span>
        <input type="text" class="form-control" id="username" name="username"   placeholder="Username" aria-label="Username" aria-describedby="addon-wrapping" required  autocomplete="off">
      </div><br>
      <div class="input-group">
        <span class="input-group-text">First Name</span>
        <input type="text" aria-label="firstname" class="form-control" name="firstname" placeholder="First Name" required  autocomplete="off">
      </div><br>
      <div class="input-group">
        <span class="input-group-text">Last Name</span>
        <input type="text" aria-label="lastname" class="form-control" name="lastname" placeholder="Last Name" required  autocomplete="off">
      </div><br>
      <div class="input-group">
        <span class="input-group-text">Email</span>
        <input type="email" aria-label="Email" id='emails' class="form-control" name="email" placeholder="Email" required  autocomplete="off">
      </div><br>

      <div class="input-group">
        <span class="input-group-text">Password</span>
        <input type="password" aria-label="Password" class="form-control" name="password" placeholder="Password" required  autocomplete="off">
      </div><br>
      <div class="form-check">
        <p align='left'>
       <input class="form-check-input" type="checkbox" value="" id="invalidCheck2" required>
       <label class="form-check-label" for="invalidCheck2">
        I declare that my age is greater than equal to 13.
       </label>
     </div></p>

      <button class="btn btn-md btn-secondary fw-bold border-white bg-white" id="regis">Register</button>

    </form>
  </main>

