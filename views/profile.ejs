<style>
  .acDetails{
    font-size: 20px;
  }
  .fname{
    margin: 0 20px;
    font-weight: bold;
  }
  .followers{
    margin: 0 20px;
  }
  .following{
    margin: 0 20px;
  }
  .editor{
    margin-top: 20px;
    border: 2px solid #1da1f2;
    background-color: #1da1f2;
    color: white;
    width: 400px;
    border-radius: 5px;

  }
  .follow{
    margin-top: 20px;
    border: 2px solid #1da1f2;
    background-color: #1da1f2;
    color: white;
    width: 400px;
    border-radius: 5px;
  }
  #edit{
    text-decoration: none;
    color: white;
    display: block;
  }
  .bio{
    padding: 20px 20px;
    width: 400px;
    overflow: auto;
  }
  .website{
    padding: 0px 20px;
    width: 400px;
    overflow: auto;
  }


@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: .5;
  }
}

  @media all and (max-width: 768){
    .acDetails{
      width:100%;
      font-size: 20px;
    }
    .fname{
      font-weight: bold;
      margin: 0px 0px;
    }
    .editor{
      position: absolute;
      display: block;
      margin: 0 20px;
      margin-top: 20px;
      border: 2px solid #1da1f2;
      background-color: #1da1f2;
      color: white;
      width: 100%;
      border-radius: 5px;

    }
    .follow{
      margin-top: 20px;
      margin-left: auto;
      margin-right: auto;
      border: 2px solid #1da1f2;
      background-color: #1da1f2;
      color: white;
      width: 100%;
      border-radius: 5px;
    }
    #edit{
      margin: 0 25px;
      text-decoration: none;
      color: white;
      display: block;
    }
    .bio{
      margin: 0 auto;
      width: 100%;
      overflow: auto;
    }
    .website{
      margin: 0 auto;
      width: 100%;
      overflow: auto;
    }
  }
  @media all and (max-width: 400px){
    .editor{
      width:100%;
      max-width: 400px;
    }
  }
</style>
